{
    "name": "trollandtoad/sellbrite-sdk",
    "description": "A PHP library that interacts with the Sellbrite API.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "Sellbrite",
        "Sellbrite SDK",
        "PHP",
        "PHP SDK"
    ],
    "authors": [
        {
            "name": "Samuel Stidham",
            "email": "sastidham@trollandtoad.com"
        },
        {
            "name": "Brandon Clothier",
            "email": "brclothier@trollandtoad.com"
        },
        {
            "name": "Kenny Dodrill",
            "email": "kedodrill@trollandtoad.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TrollAndToad\\Sellbrite\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TrollAndToad\\Sellbrite\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "ext-mbstring": "*",
        "beberlei/assert": "^3.2",
        "guzzlehttp/guzzle": "^6.3",
        "myclabs/php-enum": "^1.6",
        "nesbot/carbon": "^2.14",
        "psr/http-message": "^1.0",
        "ramsey/uuid": "^3.8",
        "teapot/status-code": "^1.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.2",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^7.4",
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^5.0",
        "squizlabs/php_codesniffer": "^3.4",
        "vimeo/psalm": "^3.1"
    },
    "scripts": {
        "lint:fix": "composer run-script lint:phpcs:fix && composer run-script lint:php-cs-fixer:fix",
        "lint:php-cs-fixer:check": "composer run-script lint:php-cs-fixer:fix -- --dry-run --verbose --diff",
        "lint:php-cs-fixer:fix": "php-cs-fixer fix",
        "lint:phpcs:check": "phpcs ./",
        "lint:phpcs:fix": "phpcbf ./",
        "lint:phpmd": "phpmd ./src text ./phpmd.xml",
        "lint": "composer run-script lint:phpcs:check && composer run-script lint:php-cs-fixer:check && composer run-script lint:phpmd",
        "analyze": "psalm",
        "security:check": "security-checker security:check ./composer.lock",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
